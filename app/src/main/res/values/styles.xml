<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <!--<item name="android:textViewStyle">@style/AppTextView</item>-->

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--<item name="@attr/snapButtonStyle">@style/SnapProgress</item>-->
    </style>

    <!--<attr name="snapButtonStyle" format="reference" />-->

    <style name="AppTheme" parent="AppThemeBase">
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="DisionTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/primary</item>
        <item name="tabTextAppearance">@style/DisionTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/textIcons</item>
    </style>

    <style name="DisionTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#80FFFFFF</item>
    </style>

    <style name="ImageBasicRippleStyle">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleDuration">300</item>
    </style>


    <style name="ImageLightRippleStyle" parent="ImageBasicRippleStyle">
        <item name="mrl_rippleColor">#FFFFFF</item>
    </style>

    <style name="ImageDarkRippleStyle" parent="ImageBasicRippleStyle">
        <item name="mrl_rippleColor">#000000</item>
    </style>

</resources>
